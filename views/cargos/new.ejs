<% layout('/layout/boilerplate') %>
<div class="container">
    <div class="row mt-3">
        <h1 class="text-center">Add New Cargo</h1>
        <div class="col-6 offset-3">

            <form action="/cargopanel" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="type">Add Cargo</label>
                    <input class="form-control" type="text" id="type" name="cargo[type]" placeholder="Cargo" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="cargo[location]" placeholder="From"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="destination">Destination</label>
                    <input class="form-control" type="text" id="destination" name="cargo[destination]" placeholder="To"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="weight">Weight</label>
                    <div class="input-group">
                        <span class="input-group-text" id="weight-label">kg</span>
                        <input type="text" class="form-control" id="weight" placeholder="0.00" aria-label="price"
                            aria-describedby="weight-label" name="cargo[weight]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text" for="image">Upload</label>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="cargo[description]"
                        placeholder="Content" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>



                <div class="mb-3 d-inline">
                    <button class="btn btn-success">Add Cargo</button>
                    <a class="btn btn-danger" href="/cargopanel">Cancel</a>
                </div>
        </div>
        </form>

    </div>
</div>