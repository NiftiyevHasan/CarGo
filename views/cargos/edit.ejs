    <title>Update Cargo</title>
</head>

<body>
    </form>
    <h1>Edit Cargo Post</h1>
    <form action="/cargopanel/<%=cargo._id%>?_method=PUT" method="POST">
        <label for="type">Add New Cargo</label>
        <input type="text" id="type" name="cargo[type]" placeholder="Cargo" value="<%=cargo.type%>">

        <label for="location">Location</label>
        <input type="text" id="location" name="cargo[location]" placeholder="Location" value="<%=cargo.location%>">

        <label for="destination">Destination</label>
        <input type="text" id="destination" name="cargo[destination]" placeholder="Destination"
            value="<%=cargo.destination%>">

        <label for="type">Weight</label>
        <input type="number" id="type" name="cargo[weight]" placeholder="Weight" value="<%=cargo.weight%>">

        <label for="description">Description</label>
        <input type="text" id="description" name="cargo[description]" placeholder="Description"
            value="<%=cargo.description%>">
        <button>Update</button>
    </form>
    <a href="/cargopanel/<%=cargo._id %>">Cancel</a>
    <form action="/cargopanel/<%=cargo._id%>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
