<% layout('/layout/boilerplate') %>
<div id="cluster-map" ></div>
<div class="container" id="cargoContainer">
    
<form action="/cargopanel" method="GET" >
    <div class="row">
        <div class="col-5">
            <label for="locationDataList" class="form-label"></label>
            <input class="form-control" list="locationOptions" id="locationDataList" name="searchLocation"
                placeholder="Enter your location">
            <datalist id="locationOptions">
                <% for (let city of distinctSearchQueryLocation){%>
                    <option value="<%=city%>">
                        <% } %>
            </datalist>
        </div>
        <div class="col-5">

            <label for="destinationDataList" class="form-label"></label>
            <input class="form-control" list="destinationOptions" id="destinationDataList" name="searchDestination"
                placeholder="Enter your destination">
            <datalist id="destinationOptions">
                <% for (let city of distinctSearchQueryDestination){%>
                    <option value="<%=city%>">
                        <% } %>
            </datalist>
        </div>
        <button class="col-2 btn btn-outline-secondary" value="search" role="submit" style="margin-top: 24px;">Submit</button>
    </div>
</form>

    <h1 class="mt-3">All Cargo Posts</h1>
    <% for (let cargo of cargos.docs) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(cargo.images.length) {%>
                    <img src="<%=cargo.images[0].url%>" class="img-fluid" alt="">
                    <% }else {%>
                        <img class="img-fluid" alt=""
                        src="https://res.cloudinary.com/dgviuwbga/image/upload/v1615736103/CarGO/dgmvebjmkwkubyw8nrgc.jpg">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=cargo.type%>

                        </h5>
                        <p class="card-text">
                            <%=cargo.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=cargo.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href=" /cargopanel/<%=cargo.id%>"> View <%=cargo.type%></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        
    </div>
    <div class="text-center mb-5 ">
        <a href="/cargopanel?page=<%= cargos.nextPage%>" id="paginate" class="btn btn-lg btn-outline-primary"> View More </a>
    </div>
        <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
                const cargos = {features: <%- JSON.stringify(cargos.docs) %>};

        </script>

        <script src="/javascripts/clusterMap.js"> </script>
        <script src="/javascripts/pagination.js"> </script>
