<% layout('/layout/boilerplate') %>
<div id="cluster-map" ></div>

<form action="" >
    <div class="row">
        <div class="col-5">
            <label for="exampleDataList" class="form-label"></label>
            <input class="form-control" list="datalistOptions" id="exampleDataList"
                placeholder="Enter your location">
            <datalist id="datalistOptions">
                <% for (let city of distinctSearchQueryLocation){%>
                    <option value="<%=city%>">
                        <% } %>
            </datalist>
        </div>
        <div class="col-5">

            <label for="exampleDataList" class="form-label"></label>
            <input class="form-control" list="datalistOptions" id="exampleDataList"
                placeholder="Enter your destination">
            <datalist id="datalistOptions">
                <% for (let city of distinctSearchQueryDestination){%>
                    <option value="<%=city%>">
                        <% } %>
            </datalist>
        </div>
<a href="" class="col-2 btn btn-outline-secondary"style="margin-top: 24px;">Search</a>
    </div>
</form>

    <h1>All Cargo Posts</h1>
    <% for (let cargo of cargos) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(cargo.images.length) {%>
                    <img src="<%=cargo.images[0].url%>" class="img-fluid" alt="">
                    <% }else {%>
                        <img class="img-fluid" alt=""
                        src="https://res.cloudinary.com/dgviuwbga/image/upload/v1615736103/CarGO/dgmvebjmkwkubyw8nrgc.jpg">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=cargo.type%>

                        </h5>
                        <p class="card-text">
                            <%=cargo.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=cargo.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href=" /cargopanel/<%=cargo.id%>"> View <%=cargo.type%></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
                const cargos = {features: <%- JSON.stringify(cargos) %>};

        </script>

        <script src="/javascripts/clusterMap.js"> </script>