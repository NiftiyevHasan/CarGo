<% layout('/layout/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1575908539614-ff89490f4a78?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=2132&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Reset</h5>
                        <form action="/forgot" method="POST" class="validated-form" novalidate>
                            <div class="mb-3 mt-5">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="text" id="email" name="email" autofocus
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <button class="btn btn-success btn-block">Reset</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

