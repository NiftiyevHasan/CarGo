<% layout('/layout/boilerplate') %>

<div class="container">
  <div class="row mt-3">
    <h1>My Dashboard</h1>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%=currentUser.username %>'s Profile
          </h5>
          <% if(currentUser.role==='admin' ) { %>
            <span class="badge bg-danger">Admin</span>
            <% } else if(currentUser.role==='driver' ){ %>
              <span class="badge bg-warning">Driver</span>
              <% } else { %>
                <span class="badge bg-primary">Client</span>
                <% } %>
                  <p class="card-text mt-3 mb-4">With supporting text below as a natural lead-in to additional content.</p>
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">email</span>
                    <input type="text" class="form-control" aria-label="Sizing example input"
                      value="<%= currentUser.email%>" aria-describedby="inputGroup-sizing-sm">
                  </div>
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Old Password</span>
                    <input type="password" class="form-control" aria-label="Sizing example input"
                      aria-describedby="inputGroup-sizing-sm">
                  </div>
                  <div class="input-group input-group-sm mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-sm">New Password</span>
                    <input type="password" class="form-control" aria-label="Sizing example input"
                      aria-describedby="inputGroup-sizing-sm">
                  </div>
                  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button class="btn btn-outline-dark me-md-2" type="button">Update</button>
                  </div>
        </div>
        <div class="card-body">
          <div class="card-header text-center">
            <h5>My Bids</h5>
          </div>
          <ul class="list-group list-group-flush">
            <ul class="list-group list-group-flush text-center">
              <% for (bid of bids) {%>
                <li class="list-group-item"><a href="/cargopanel/<%=cargo._id%>"
                    class="btn btn-outline-secondary ms-auto dashboardPost">
                    <%= bid.message %> - $ <%= bid.amount %>
                  </a></li>
                <% } %>
            </ul>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <div class="card-header text-center">
            <h5>My Posts</h5>
          </div>
          <ul class="list-group list-group-flush">
            <ul class="list-group list-group-flush text-center">
              <% for (cargo of cargos) {%>
                <li class="list-group-item"><a href="/cargopanel/<%=cargo._id%> "
                    class="btn btn-outline-secondary ms-auto dashboardPost" >
                    <%= cargo.type %> to <%= cargo.destination %>
                  </a></li>
                <% } %>
            </ul>
        </div>
      </div>
    </div>
  </div> 
</div>